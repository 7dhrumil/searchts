{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es5", "es6", "dom", "esnext"],
		"allowJs": true,
		"declaration": true,
		"removeComments": true,
		"emitDeclarationOnly": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "./lib",
		"strict": false,
		"baseUrl": "src",
		"incremental": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "test"]
}
